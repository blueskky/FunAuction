<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="@dimen/px_750"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/policy_shape"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_50"
            android:text="用户须知"
            android:textColor="#666666"
            android:textSize="@dimen/px_45" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/px_50"
            android:lineSpacingMultiplier="1.5"
            android:text="@string/policy_rule"
            android:textColor="#666666"
            android:textSize="@dimen/px_38" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_2"
            android:background="#efefef" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_130"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="暂不使用"
                android:textColor="#333333"
                android:textSize="@dimen/px_38" />

            <View
                android:layout_width="@dimen/px_2"
                android:layout_height="match_parent"
                android:background="#efefef" />

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="同意"
                android:textColor="#4DB9E3"
                android:textSize="@dimen/px_38" />


        </LinearLayout>


    </LinearLayout>


</FrameLayout>