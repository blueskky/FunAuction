<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="@dimen/px_30"
    android:paddingBottom="@dimen/px_30">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/pat_record" />

        <TextView
            android:id="@+id/tv_dot"
            android:layout_width="@dimen/px_50"
            android:layout_height="@dimen/px_50"
            android:layout_alignTop="@+id/iv_pic"
            android:layout_alignRight="@+id/iv_pic"
            android:background="@drawable/red_dot"
            android:gravity="center"
            android:padding="@dimen/px_4"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="@dimen/px_30" />


    </RelativeLayout>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_30"
        android:text="拍拍记录"
        android:textColor="@color/white"
        android:textSize="@dimen/px_30" />

</LinearLayout>