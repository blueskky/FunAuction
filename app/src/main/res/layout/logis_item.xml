<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_50"
        android:layout_marginTop="@dimen/px_20"
        android:layout_marginRight="@dimen/px_50"
        android:layout_marginBottom="@dimen/px_20"
        android:background="@drawable/common_radio_bg">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_img"
            android:layout_width="@dimen/px_340"
            android:layout_height="@dimen/px_340"
            android:scaleType="centerCrop"
            android:src="@drawable/place_holder"
            app:riv_corner_radius_bottom_left="@dimen/px_15"
            app:riv_corner_radius_top_left="@dimen/px_15" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/px_25"
                android:text=""
                android:textColor="#333"
                android:textSize="@dimen/px_40" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_25"
                android:layout_marginRight="@dimen/px_25"
                android:text="数量X1 颜色随机"
                android:textColor="#888"
                android:textSize="@dimen/px_36" />


            <Space
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_logistics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/px_15"
                android:gravity="right"
                android:padding="@dimen/px_25"
                android:text="查看物流详情 >"
                android:textColor="#999"
                android:textSize="@dimen/px_36" />


        </LinearLayout>

    </LinearLayout>

</FrameLayout>