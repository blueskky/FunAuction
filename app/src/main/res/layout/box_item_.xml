<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_50"
        android:layout_marginTop="@dimen/px_20"
        android:layout_marginRight="@dimen/px_50"
        android:layout_marginBottom="@dimen/px_20"
        android:background="@drawable/common_radio_bg">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_cover"
            android:layout_width="@dimen/px_340"
            android:layout_height="@dimen/px_340"
            android:scaleType="centerCrop"
            android:src="@color/color_ddd"
            app:riv_corner_radius_bottom_left="@dimen/px_15"
            app:riv_corner_radius_top_left="@dimen/px_15" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/px_25">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#333"
                android:textSize="@dimen/px_40" />

            <TextView
                android:id="@+id/tv_rule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_15"
                android:text="数量X1 颜色随机"
                android:textColor="#888"
                android:textSize="@dimen/px_36" />


            <Space
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/ll_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_entity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/px_30"
                    android:text="要实物"
                    android:textColor="#333"
                    android:textSize="@dimen/px_36" />

                <Button
                    android:id="@+id/btn_sell"
                    android:layout_width="@dimen/px_300"
                    android:layout_height="@dimen/px_100"
                    android:layout_marginLeft="@dimen/px_40"
                    android:background="@drawable/btn_resell"
                    android:text="转卖"
                    android:textColor="@color/white"
                    android:textSize="@dimen/px_40" />


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</FrameLayout>