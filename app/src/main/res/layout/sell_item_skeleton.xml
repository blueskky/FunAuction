<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_50"
        android:layout_marginTop="@dimen/px_20"
        android:layout_marginRight="@dimen/px_50"
        android:layout_marginBottom="@dimen/px_20"
        android:background="@drawable/common_radio_bg">

        <com.makeramen.roundedimageview.RoundedImageView
            android:scaleType="centerCrop"
            android:layout_width="@dimen/px_340"
            android:layout_height="@dimen/px_340"
            android:src="@color/color_ddd"
            app:riv_corner_radius_bottom_left="@dimen/px_20"
            app:riv_corner_radius_top_left="@dimen/px_20" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px_30"
            android:orientation="vertical"
            android:paddingTop="@dimen/px_20"
            android:paddingRight="@dimen/px_30"
            android:paddingBottom="@dimen/px_20">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_ddd"
                android:textColor="#333"
                android:textSize="@dimen/px_40" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_15"
                android:background="@color/color_ddd"
                android:textColor="#888"
                android:textSize="@dimen/px_36" />


            <Space
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1" />


            <LinearLayout
                android:layout_width="@dimen/px_300"
                android:layout_height="@dimen/px_45"
                android:background="@color/color_ddd"
                android:orientation="horizontal" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_45"
                android:layout_marginTop="@dimen/px_15"
                android:background="@color/color_ddd"
                android:orientation="horizontal">


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</FrameLayout>