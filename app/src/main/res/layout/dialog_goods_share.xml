<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/px_40"
        android:text="长按保存至相册"
        android:textColor="@color/white"
        android:textSize="@dimen/px_36" />

    <LinearLayout
        android:id="@+id/ll_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/goods_share"
        android:orientation="vertical"
        android:paddingLeft="@dimen/px_80"
        android:paddingRight="@dimen/px_80">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="14" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="28"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_cover"
                    android:layout_width="@dimen/px_160"
                    android:layout_height="@dimen/px_160"
                    android:layout_centerInParent="true"
                    android:background="@color/color_ddd"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/tv_market"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/px_15"
                    android:text="市场价格"
                    android:textColor="#666"
                    android:textSize="@dimen/px_30" />

            </RelativeLayout>


            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_30"
                android:layout_marginRight="@dimen/px_30"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:text=""
                android:textColor="#333"
                android:textSize="@dimen/px_36"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tv_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_5"
                android:layout_marginBottom="@dimen/px_15"
                android:gravity="center"
                android:text=""
                android:textColor="#ef5d30"
                android:textSize="@dimen/px_30" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="58"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/px_50"
                android:text="好友邀请你帮忙抢拍"
                android:textColor="#4c4c6d"
                android:textSize="@dimen/px_36" />


            <ImageView
                android:id="@+id/iv_code"
                android:layout_width="@dimen/px_225"
                android:layout_height="@dimen/px_225"
                android:layout_centerInParent="true"
                android:background="@color/color_ddd" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_50"
                android:text="扫码识别"
                android:textColor="#4c4c6d"
                android:textSize="@dimen/px_30" />


        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/tv_copy"
        android:layout_width="@dimen/px_330"
        android:layout_height="@dimen/px_100"
        android:layout_marginTop="@dimen/px_40"
        android:background="@drawable/goods_share_copy"
        android:text="复制链接"
        android:textColor="@color/white"
        android:textSize="@dimen/px_35" />

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_50"
        android:src="@drawable/icon_close" />


</LinearLayout>